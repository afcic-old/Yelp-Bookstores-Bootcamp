<% layout ('layout/boilerplate')%>

<div id="cluster-map"></div>
<div class="container"></div>
<h1>All bookshops</h1>

<% for (let bookshop of bookshops) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(bookshop.images.length) {%>
      <img class="img-fluid" alt="" src="<%=bookshop.images[0].url%>" />
      <% } else {%>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/cicinoblacek/image/upload/v1616638421/bookstore/hfyd3k1ywyvnsuvmrw4n.jpg"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= bookshop.title %></h5>

        <p class="card-text"><%= bookshop.description %></p>
        <p class="card-text">
          <small class="text-muted"><%=bookshop.location%></small>
        </p>
        <a class="btn btn-primary" href="/bookshops/<%=bookshop._id%> "
          >View <%=bookshop.title%>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const bookshop = {features: <%-JSON.stringify(bookshops)%> };
</script>
<script scr="../javascript/clusterMap.js"></script>
